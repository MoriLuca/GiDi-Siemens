@model Luca.Siemens.Models.SiemensPLC
@{
    ViewData["Title"] = "ReadSiemensPLC";
}

<div class="list-group">
    <a class="list-group-item text-center active">Valori Tag PLC Live</a>

    @foreach (var item in Model.Data)
    {
        if (item.DotNetDataType != typeof(string))
        {
            <a class="list-group-item list-group-item-action">Nome Variabile : @item.Name Valore : @item.RawContent</a>
        }
        else if (item.DotNetDataType == typeof(string))
        {
            <a class="list-group-item list-group-item-action">Nome Variabile : @item.Name Valore : @item.Content</a>
        }
    }
            <a class="list-group-item list-group-item-action">
                @Model.Data[0].Name : 
                <div class="progress">
                    <div id="bar" class="progress-bar no-animation" role="progressbar" style="width: @Model.Data[0].RawContent%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">@Model.Data[0].RawContent</div>
                </div>
            </a>
</div>





